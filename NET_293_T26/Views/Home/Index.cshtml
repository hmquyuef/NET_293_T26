@model IEnumerable<NET_293_T26.Models.Entities.ToDoTask>

@{
	ViewData["Title"] = "Home Page";
}

<div>
	<a class="btn btn-primary">Add Task</a>
	@* render table *@
	<table class="table">
		<thead>
			<tr>
				<th>STT</th>
				<th>Name</th>
				<th>Prio</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@if(Model.Count() > 0)
			{
				foreach (var item in Model)
				{
					<tr>
						<td>1</td>
						<td>@item.Name</td>
						<td>@item.Priority</td>
						<td>@item.Status</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
							<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="5" class="text-center">No data</td>
				</tr>
			}
		</tbody>
</div>
